.row
  .col-lg-8.col-lg-offset-2
    %table.table.table-condensed
      %tr
        %th= 'Nazwisko i imiÄ™'
        %th{colspan: 2}= 'Actions'
      -@lecturers.each do |lecturer|
        %tr
          %td=lecturer.lastname + ' ' + lecturer.firstname
          %td
            =link_to "Show", lecturer_path(lecturer[:id]), class: 'btn btn-primary'
            =link_to "Usun z instytutu", employment_path(@employments.find_by(lecturer_id: lecturer.id).id), :method => 'delete', data: { confirm: "Czy aby na pewno?" }, class: 'btn btn-primary'
.row
  .col-lg-8.col-lg-offset-2
    = simple_form_for @institute, :method => :patch, html: { class: 'form-horizontal' } do |f|
      .inputs
        = f.input :id, collection: @other_lecturers, label: 'Instytuty/Katedry', :label_method => lambda { |lect| "#{lect.lastname} #{lect.firstname}" }
      .action
        = f.button :submit, class: 'btn btn-primary'